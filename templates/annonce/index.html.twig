{% extends 'index.html.twig' %}

{% block title %}Annonce index{% endblock %}

{% block body %}
    <h1>Annonce index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Intitule</th>
                <th>Lieu</th>
                <th>Description</th>
                <th>Visible</th>
                {% if is_granted("ROLE_CONSULTANT") %}
                <th>Nombre de postulant(s)</th>
                {% endif %}
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for annonce in annonces %}
            <tr>
                <td>{{ annonce.id }}</td>
                <td>{{ annonce.intitule }}</td>
                <td>{{ annonce.lieu }}</td>
                <td>{{ annonce.description }}</td>
                <td>{{ annonce.visible ? 'Oui' : 'Non' }}</td>
                {% if is_granted("ROLE_CONSULTANT") %}
                    <td>{{ annonce.getPostulants|length }}</td>
                {% endif %}
                <td> 
                    {% if is_granted("ROLE_RECRUTEUR") %}
                        <a type="button" class="btn" href="{{ path('app_annonce_show', {'recruteur': app.user.getRecruteur.id,'id': annonce.id}) }}">Voir</a>
                        <a type="button" class="btn" href="{{ path('app_annonce_edit', {'recruteur': app.user.getRecruteur.id,'id': annonce.id}) }}">edit</a>
                    {% elseif is_granted("ROLE_CANDIDAT") %}
                        {% if annonce.checkIfPostulant(annonce,app.user.getCandidat) %}
                            <a type="button" class="btn" href="{{ path('app_annonce_apply', {'candidat': app.user.getCandidat.id,'id': annonce.id}) }}">Postuler</a>
                        {% endif %}
                    {% elseif is_granted("ROLE_CONSULTANT") %}
                        <a type="button" class="btn" href="{{ path('app_annonce_show', {'recruteur': annonce.getRecruteur.id,'id': annonce.id}) }}">Voir</a>
                        <a type="button" class="btn" href="{{ path('app_annonce_makeVisible', { 'id': annonce.id, 'visible': (annonce.visible ? 0 : 1)}) }}">{{ annonce.visible ? 'Retirer' : 'Publier' }}</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if is_granted("ROLE_RECRUTEUR") %}
    <a type="button" class="btn" href="{{ path('app_annonce_new', {'recruteur': app.user.getRecruteur.id}) }}">Create new</a>
    {% endif %}
{% endblock %}
