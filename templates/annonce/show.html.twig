{% extends 'index.html.twig' %}

{% block title %}Annonce{% endblock %}

{% block body %}
    <h1>Annonce</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ annonce.id }}</td>
            </tr>
            <tr>
                <th>Intitule</th>
                <td>{{ annonce.intitule }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ annonce.lieu }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ annonce.description }}</td>
            </tr>
            <tr>
                <th>Visible</th>
                <td>{{ annonce.visible ? 'Yes' : 'No' }}</td>
            </tr>
            {% if app.user and "ROLE_RECRUTEUR" in app.user.roles %}
            <tr>
                <th>Postulants</th>
                <td>
                {% for postulant in annonce.postulants %}
                {% if postulant.valide %}
                {% for candidat in postulant.candidat %}
                <a type="button" class="btn" href="{{ path('app_candidat_show', {'id': candidat.id}) }}">
                {{ candidat }}
                </a>
                {% endfor %}
                {% endif %}
                {% endfor %}
                </td>
            </tr>
            {% endif %}
        </tbody>
    </table>
{% if app.user and "ROLE_RECRUTEUR" in app.user.roles %}
    <a type="button" class="btn" href="{{ path('app_annonce_index') }}">back to list</a>
    <a type="button" class="btn" href="{{ path('app_annonce_edit', {'recruteur': app.user.getRecruteur.id,'id': annonce.id}) }}">edit</a>
    {{ include('annonce/_delete_form.html.twig') }}
{% endif  %}
    
{% endblock %}
